<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f1eff6"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:background="#f1eff6" >

                    <ImageView
                        android:id="@+id/part_img_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/part_detail_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/part_img_logo"
                        android:ellipsize="end"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_wxh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/part_img_logo"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15dp"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <View
                        style="@style/splitLineStyle"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp" />
                </RelativeLayout>
                <!-- 地区 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp" >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="12dp"
                        android:text="@string/part_string_detail_region"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="17dp"
                        android:padding="5dp"
                        android:textColor="#aaa"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp" />
                <!-- 经营类型 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:minHeight="50dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:text="@string/part_string_detail_managelx"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_lx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="17dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="5dp"
                        android:textColor="#aaa"
                        android:textSize="15sp" />
                </RelativeLayout>

                <!-- 联系电话 -->

                <RelativeLayout
                    android:id="@+id/part_rela_mp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click_bg"
                    android:minHeight="50dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="@string/part_string_sjmp"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_mp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="25dp"
                        android:padding="5dp"
                        android:text="@string/part_string_in_wq_mp"
                        android:textColor="#aaa"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/arrowStyle" />
                </RelativeLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />
                <!-- 微企空间 -->

                <RelativeLayout
                    android:id="@+id/part_rela_wqw"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click_bg"
                    android:minHeight="50dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="@string/string_sjwz"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="25dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="5dp"
                        android:text="@string/part_string_in_wq_room"
                        android:textColor="#aaa"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/arrowStyle" />
                </RelativeLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="#f1eff6" />

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />
                <!-- 企业相册 -->

                <RelativeLayout
                    android:id="@+id/part_rela_qyxc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click_bg"
                    android:minHeight="50dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="@string/me_string_wqxc"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_xccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="17dp"
                        android:padding="5dp"
                        android:textColor="#aaa"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/arrowStyle" />
                </RelativeLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp"
                    android:visibility="gone" />
                <!-- 企业动态 -->

                <RelativeLayout
                    android:id="@+id/part_rela_qyhd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click_bg"
                    android:minHeight="50dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="@string/me_string_wqdt"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/part_detail_txt_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="20dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="5dp"
                        android:textColor="#e2895c"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/arrowStyle" />
                </RelativeLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp"
                    android:visibility="gone" />
                <!-- 企业产品 -->

                <RelativeLayout
                    android:id="@+id/part_detail_rela_pro"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/item_click_bg"
                    android:clickable="true"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_qyxc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:text="@string/part_string_detail_comproduct"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <View
                        style="@style/splitLineStyle"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp" />

                    <com.wq.UI.XgridView
                        android:id="@+id/part_detail_grid_album"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="17dp"
                        android:layout_toRightOf="@+id/txt_qyxc"
                        android:cacheColorHint="@android:color/transparent"
                        android:horizontalSpacing="5dp"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3" >
                    </com.wq.UI.XgridView>

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/arrowStyle" />
                </RelativeLayout>
                <!-- 联系人 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/part_string_detail_lx_name"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_lx_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="#aaa"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_lx_mobile"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/part_string_detail_lx_mobile"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_lx_mobile"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="#aaa"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/part_string_detail_lx_zw"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_lx_zw"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="#aaa"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_lx_we_chat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/part_string_detail_lx_we_chat"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_lx_we_chat"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="#aaa"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 渠道来源 -->

                <LinearLayout
                    android:id="@+id/part_layout_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1eff6"
                    android:orientation="vertical" >

                    <View
                        style="@style/splitLineStyle"
                        android:layout_marginLeft="0dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:background="#f1eff6" />

                    <LinearLayout
                        android:id="@+id/part_layout_container_channer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            style="@style/splitLineStyle"
                            android:layout_marginLeft="0dp" />

                        <LinearLayout
                            android:id="@+id/part_layout_channel"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_click_bg"
                            android:minHeight="50dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:paddingLeft="12dp"
                                android:text="@string/part_string_detail_channel"
                                android:textColor="#000"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/img_channel_logo"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:id="@+id/part_detail_txt_channel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/part_detail_txt_attention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textColor="#aaa"
                                android:textSize="15sp" >
                            </TextView>
                        </LinearLayout>

                        <View
                            style="@style/splitLineStyle"
                            android:layout_marginLeft="0dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_gz"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_style_green"
                        android:text="@string/part_string_gz"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>