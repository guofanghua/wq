<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <include layout="@layout/no_data" />

    <FrameLayout
        android:id="@+id/layout_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scroll_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/tip_detail_img_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tip_detail_txt_name"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingRight="10dp"
                                android:textColor="#e2895c"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tip_detail_txt_content"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:padding="5dp"
                                android:textColor="#929391"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 图片 -->

                <FrameLayout
                    android:id="@+id/layout_img_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >
                </FrameLayout>
                <!-- 评论和赞 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <!-- 显示时间和删除按钮 -->

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center"
                        android:textColor="#ccc" />
                    <!-- 删除 -->

                    <TextView
                        android:id="@+id/txt_del"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/string_del"
                        android:textColor="#052b8b"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layout_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_zan_click" />

                        <TextView
                            android:id="@+id/txt_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/find_string_ec_zan"
                            android:textColor="#adbcd8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_pl"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_response_click" />

                        <TextView
                            android:id="@+id/txt_pl"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/find_string_ec_pl"
                            android:textColor="#adbcd8" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 显示点过赞的人的名称 -->

                <LinearLayout
                    android:id="@+id/layout_pl_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/msg_bg_nomal"
                        android:orientation="vertical" >

                        <com.custom.vg.list.CustomListView
                            android:id="@+id/zan_auto_listview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp" />

                        <View
                            android:id="@+id/zan_split"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#000"
                            android:visibility="gone" />
                        <!-- 留言 -->

                        <com.wq.UI.InScrolllistView
                            android:id="@+id/msg_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0dp"
                            android:listSelector="@android:color/transparent" >
                        </com.wq.UI.InScrolllistView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ec_circle_layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/cir_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="0"
            android:visibility="gone" >

            <EditText
                android:id="@+id/ec_circle_edt_msg"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/cir_edittext_bg"
                android:hint="@string/find_string_ec_send_hint"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ec_circle_btn_msg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_cir_click"
                android:text="@string/find_string_ec_send"
                android:textColor="#000" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>