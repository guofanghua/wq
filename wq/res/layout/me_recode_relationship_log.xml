<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#ccc"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/layout_pic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:minHeight="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="和谁?"
                    android:textSize="16sp" />

                <com.custom.vg.list.CustomListView
                    android:id="@+id/grid_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="auto_fit"
                    android:visibility="gone" >
                </com.custom.vg.list.CustomListView>

                <ImageView
                    android:id="@+id/add_relation_btn"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="right|top"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:src="@drawable/btn_rela_add_click" />
            </LinearLayout>

            <View style="@style/splitLineStyle" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="fill_parent"
                android:layout_height="250dip"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/log_hint"
                android:padding="10dip" />

            <View style="@style/splitLineStyle1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>