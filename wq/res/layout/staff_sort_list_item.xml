<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="75dp"
    android:background="@drawable/item_click_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/part_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_prompt" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_lxr"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/part_sort_list_wmm"
            android:lines="1"
            android:textColorHint="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_zw"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="#999"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_detail"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_green_clickbg"
        android:gravity="center"
        android:text="详 情"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>