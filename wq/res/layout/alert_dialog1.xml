<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/alert_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alert_dialog_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="退出软件？"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/register_splie" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/alert_dialog_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:minHeight="20dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:textSize="16sp" />
        </ScrollView>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_register_click"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/string_wzdl"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/register_dialog_close_tip" />

</FrameLayout>