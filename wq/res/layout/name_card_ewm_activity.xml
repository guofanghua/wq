<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/top" />
    <!-- android:alpha="0.8" -->

    <ScrollView
        android:id="@+id/layout_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/ewm_repeat_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ewm_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 二维码 -->

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="45dp" >

                <!-- 二维码 -->

                <ImageView
                    android:id="@+id/img_erweima"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="15dp" />

                <ImageView
                    android:id="@+id/small_img_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="258dp"
                    android:gravity="center"
                    android:text="@string/me_string_name_card_ewm_title"
                    android:textColor="#333"
                    android:textSize="17sp" />
            </FrameLayout>
            <!-- 企业信息 -->

            <LinearLayout
                android:id="@+id/me_rela2"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="-318dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/large_img_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_company_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txt_company_wqh"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>