<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff6"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <EditText
                    android:id="@+id/edit_old_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:hint="@string/me_string_set_old_pwd_pwd_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="true"
                    android:textSize="16sp" />

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <EditText
                    android:id="@+id/edit_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:hint="@string/me_string_set_pwd_pwd_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="true"
                    android:textSize="16sp" />

                <View style="@style/splitLineStyle" />

                <EditText
                    android:id="@+id/edit_re_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:hint="@string/me_string_set_pwd_pwd_two_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="true"
                    android:textSize="16sp" />

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>