<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f1eff6" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <!-- 完善资料 -->

            <RelativeLayout
                android:id="@+id/me_rela_wqxx"
                style="@style/relaStyleFra"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/linq_add_wqxx"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <View
                        style="@style/splitLineStyle"
                        android:layout_width="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/lc_arrow" />

            <RelativeLayout
                android:id="@+id/me_rela_xc"
                style="@style/relaStyleFra"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/linq_add_wqxc"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/lc_arrow" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />
            <!-- 我的产品 -->

            <RelativeLayout
                android:id="@+id/me_rela_wdcp"
                style="@style/relaStyleFra"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/linq_add_product"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/lc_arrow" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />
            <!-- 动态优惠 -->

            <RelativeLayout
                android:id="@+id/me_rela_hdyh"
                style="@style/relaStyleFra"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/linq_add_notice"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </RelativeLayout>

            <!-- 空间统计 -->

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/lc_arrow" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />
            <!-- 我的模板 -->

            <RelativeLayout
                android:id="@+id/me_rela_wdmb"
                style="@style/relaStyleFra"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/linq_add_temp"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <View
                style="@style/splitLineStyle"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>