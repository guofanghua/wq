<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff6"
    android:orientation="vertical" >

    <!-- 顶部 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/navigatition_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_txt_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/string_register_tj"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/top_btn_edit"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_green_clickbg"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/string_into"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_tip"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/tip"
                android:gravity="center"
                android:text="15"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>
    <!-- 搜索输入框 -->

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/part_search_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <View
            style="@style/splitLineStyle"
            android:layout_marginLeft="0dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/register_com_edit_hint"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/search_click" />
        </LinearLayout>

        <View
            style="@style/splitLineStyle"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f1eff6"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#ccc"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="normal" >
    </ListView>

</LinearLayout>