<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff6"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <include layout="@layout/no_data" />

    <ScrollView
        android:id="@+id/layout_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:text="@string/me_string_product_cate_tip" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <com.wq.UI.InScrolllistView
                android:id="@+id/cate_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@drawable/item_click_bg"
                android:minHeight="50dp" >
            </com.wq.UI.InScrolllistView>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <LinearLayout
                android:id="@+id/layout_add_cate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/me_pro_add_attr_cate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/add" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/me_string_product_add_cate"
                    android:textColor="#03a00f"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>