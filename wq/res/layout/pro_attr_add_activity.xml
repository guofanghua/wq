<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff6"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/attr_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <EditText
                android:id="@+id/edit_att_key"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#fff"
                android:ems="10"
                android:hint="@string/me_string_pro_attr_key_hint"
                android:maxLength="5"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:tag="0"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <TextView
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="@string/me_string_pro_attr_key_explan"
                android:textSize="16sp" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <EditText
                android:id="@+id/edit_att_value"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#fff"
                android:hint="@string/me_string_pro_attr_value_hint"
                android:maxLength="20"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:tag="0"
                android:textSize="16sp" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <TextView
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="@string/me_string_pro_attr_value_explan"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>