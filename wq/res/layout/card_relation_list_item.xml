<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- 日期 -->

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="top|right"
        android:paddingTop="10dip"
        android:text="" />
    <!-- 竖线和图片 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp" >

        <View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="#ccc" />

        <View
            android:layout_width="10dip"
            android:layout_height="2px"
            android:visibility="gone"
            android:id="@+id/endTip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ccc" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:background="@drawable/add_prompt" />

        <TextView
            android:id="@+id/numCount"
            android:layout_width="@dimen/dip24"
            android:layout_height="@dimen/dip24"
            android:layout_marginLeft="@dimen/dip30"
            android:layout_marginTop="@dimen/dip30"
            android:background="@drawable/tip2"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666"
            android:textSize="@dimen/dip10"
            android:visibility="gone" />
    </RelativeLayout>
    <!-- 时间 -->

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/chatfrom_bg"
        android:lineSpacingMultiplier="1.3"
        android:minLines="2"
        android:minWidth="150dp"
        android:paddingLeft="15dp"
        android:text=""
        android:textSize="15sp" />

</LinearLayout>