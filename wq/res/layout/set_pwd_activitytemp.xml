<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff6"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#aaa"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_system_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/email"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/me_string_set_pwd_yx"
                android:textColor="#f00"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_jym"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/me_string_set_pwd_jym_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_re_commit"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/btn_style_white"
                    android:text="@string/me_string_set_pwd_hqjym"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />

                <EditText
                    android:id="@+id/edit_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    
                    android:background="@android:color/white"
                    android:hint="@string/me_string_set_pwd_pwd_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="true"
                    android:textSize="16sp" />

                <View style="@style/splitLineStyle" />

                <EditText
                    android:id="@+id/edit_re_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:hint="@string/me_string_set_pwd_pwd_two_hint"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:password="true"
                    android:textSize="16sp" />

                <View
                    style="@style/splitLineStyle"
                    android:layout_marginLeft="0dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>