<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#fff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ec_child_item_txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="bottom"
            android:text="12"
            android:textColor="#000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ec_child_item_txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ec_child_item_layout_content"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/btn_cir_detail_click"
        android:orientation="horizontal"
        android:paddingBottom="3dp" >

        <FrameLayout
            android:id="@+id/ec_child_item_layout_img"
            android:layout_width="90dp"
            android:layout_height="90dp" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ec_child_item_txt_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:paddingRight="5dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ec_child_itme_txt_pic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:textColor="#aaa"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>