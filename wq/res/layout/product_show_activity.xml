<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <com.wq.UI.myScrollView
        android:id="@+id/add_scroll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/frame_img"
                android:layout_width="fill_parent"
                android:layout_height="160dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/tabpager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center" >
                </android.support.v4.view.ViewPager>
                <!-- android:alpha="0.5" -->

                <LinearLayout
                    android:id="@+id/layout_index"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="#000"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <!-- android:alpha="1" -->

                    <TextView
                        android:id="@+id/txt_index"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:textSize="17sp" />
                </LinearLayout>
            </FrameLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <!-- 产品名称 -->

            <TextView
                android:id="@+id/me_txt_title_info"
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:text="@string/me_string_product_info" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <RelativeLayout
                android:id="@+id/me_rela_pro_name"
                style="@style/relaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/singleStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/me_string_product_name" />

                <TextView
                    android:id="@+id/txt_pro_name"
                    style="@style/itemEidtStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:tag="0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/splitLineStyle" />

            <!-- 价格 -->

            <RelativeLayout
                android:id="@+id/me_rela_price"
                style="@style/relaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/singleStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/me_string_product_price" />

                <TextView
                    android:id="@+id/txt_pro_price"
                    style="@style/itemEidtStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:tag="0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/splitLineStyle" />

            <!-- 产品简介 -->

            <RelativeLayout
                android:id="@+id/me_rela_intro"
                style="@style/relaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="12dp"
                    android:text="@string/me_string_product_intro"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_pro_intro"
                    style="@style/itemEidtStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:padding="5dp"
                    android:tag="0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <!-- 产品类别 -->

            <TextView
                android:id="@+id/me_txt_title2"
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:text="@string/me_string_product_cate" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <!-- 选择的类别 -->

            <RelativeLayout
                android:id="@+id/me_rela_cate"
                style="@style/relaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/singleStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/me_string_product_cate_tip" />

                <TextView
                    android:id="@+id/txt_pro_cate"
                    style="@style/itemEidtStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:padding="5dp"
                    android:tag="-1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <!-- 产品属性 -->

            <TextView
                style="@style/tipStyle"
                android:layout_width="fill_parent"
                android:text="@string/me_string_product_attr" />

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />

            <com.wq.UI.InScrolllistView
                android:id="@+id/pro_attr_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                  android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0px"
                android:listSelector="@android:color/transparent" >
            </com.wq.UI.InScrolllistView>

            <View
                style="@style/splitLineStyle"
                android:layout_marginLeft="0dp" />
        </LinearLayout>
    </com.wq.UI.myScrollView>

</LinearLayout>