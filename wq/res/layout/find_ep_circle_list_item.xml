<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/notice_list_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ep_circle_item_img_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ep_circle_item_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#e2895c"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ep_circle_item_txt_type"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:textColor="#ccc"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- 根据类型来动态布局 -->

            <TextView
                android:id="@+id/ep_circle_item_txt_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="#929391"
                android:textSize="15sp" />
            <!-- 分享类型布局 -->

            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/msg_bg_click"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:textColor="#929391"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- 图片 -->

            <FrameLayout
                android:id="@+id/layout_img_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal" >
            </FrameLayout>
            <!-- 评论和赞 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <!-- 显示时间和删除按钮 -->

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center"
                    android:textColor="#ccc" />
                <!-- 删除 -->

                <TextView
                    android:id="@+id/txt_del"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/string_del"
                    android:textColor="#052b8b"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/btn_zan_click" />

                    <TextView
                        android:id="@+id/txt_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/find_string_ec_zan"
                        android:textColor="#adbcd8" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/btn_response_click" />

                    <TextView
                        android:id="@+id/txt_pl"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/find_string_ec_pl"
                        android:textColor="#adbcd8" />
                </LinearLayout>
            </LinearLayout>
            <!-- 发送失败的提示界面 -->

            <LinearLayout
                android:id="@+id/layout_send_main"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/msg_bg_nomal"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/send_failure" />

                <TextView
                    android:id="@+id/txt_send_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/find_ec_send_warn_item"
                    android:textColor="#666"
                    android:textSize="16sp" />
            </LinearLayout>
            <!-- 显示点过赞的人的名称 -->

            <LinearLayout
                android:id="@+id/layout_pl_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/msg_bg_nomal"
                android:orientation="vertical" >

                <com.custom.vg.list.CustomListView
                    android:id="@+id/zan_auto_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/zan_split"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/pl_split_line"
                    android:visibility="gone" />
                <!-- 留言 -->

                <LinearLayout
                    android:id="@+id/item_msg_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:background="#ccc" />

</LinearLayout>