<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/login_relate_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/register1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/logoin_user_name"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/register_edt_user"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/register_name_hint"
                    android:padding="5dp"
                    android:textColorHint="#ccc"
                    android:textSize="16dp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|right"
                        android:text="@string/logoin_user_pwd"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/register_edt_userKey"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/register_pwd_hint"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textColorHint="#ccc"
                        android:textSize="16dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|right"
                        android:text="@string/logoin_user_pwd_confrim"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/register_edt_rep_userKey"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:hint="@string/register_pwd_comfirm_hint"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textColorHint="#ccc"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/register_btn_confirm"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green_clickbg"
                android:text="@string/register_string_zc"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>